#include<iostream>
using namespace std;
int main()
{
    int num, mayor, negativo;
    int a;
    cout<<"cuantos numeros quieres ingresar";
    cin>>a;
    for(int i=0;i<=a;i++)
    {;
        cout<<"di numero";
        cin>>num;
        if(i==0){
            mayor=num;
        }
        else{
        if(num>mayor)mayor=num;
        if(num<0)negativo=num;
        }

    }
    cout<< " el mumero mayor es "<<mayor<<endl;
    cout<<"el numero negativo es"<<negativo<<endl; 
}
